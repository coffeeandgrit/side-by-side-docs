<html>
    <head>
        <script src='https://code.jquery.com/jquery-2.1.4.js'></script>
        <link href='./refined4.css' rel='stylesheet'></link>
        <link href='./prism.css' rel='stylesheet'></link>
        <link href='./reflex.css' rel='stylesheet'></link>
        <script src='./lang-select.js'></script>
        <script src='./prism.js'></script>
    <body>
        <div class='grid'>
            <div class='grid__col-2'>
                <div class='brand'>
                    <div class='copy'>
                        super-sweet branding
                    </div>
                </div>
                <div class='scroll'>
                    <div class='scrollpad'>&nbsp;</div>
                    <ul>
                        {{#each navigationLinks}}
                            {{{documentation_link this}}}
                        {{/each}}
                    </ul>
                </div>
            </div>
            <div class='grid__col-10'>
                <div class='scroll'>
                    <div class='section grid'>
                        <!-- special row: col one is empty, col two has the language picker' -->
                        <!-- this is sticky -->
                        <div class='description grid__col-6'>
                        </div>
                        <div class='example grid__col-6'>
                            <div class='language-selector'>
                                <div class='selections'>
                                {{#each languages}}
                                    {{{documentation_language this}}}
                                {{/each}}
                                </div>
                            </div>
                        </div>
                    </div>
                    {{#each sections}}
                    <div class='section grid' id='{{anchor}}'>
                        <div class='description grid__col-6'>
                            <div class='copy'>
                                {{{this.content}}}
                            </div>
                        </div>
                        <div class='example grid__col-6'>
                            <div class='copy'>&nbsp;</div>
                        </div>
                    </div>
                        {{#each topics}}
                        <div class='section grid'>
                            <div class='description grid__col-6'>
                                <div class='copy'>
                                    {{{this.content}}}
                                </div>
                            </div>
                            <div class='example grid__col-6'>
                                <div class='copy'>
                                    {{#each this.examples}}
                                    {{{documentation_example this}}}
                                    {{/each}}
                                </div>
                            </div>
                        </div>
                        {{/each}}
                    {{/each}}
                </div>
            </div>
        </div>
    </body>
</html>
